{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "general": {
      "type": "object",
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "grade": {
          "type": "string",
          "enum": ["A", "B", "C", "D", "E", "F"]
        },
        "entity": {
          "type": "string"
        },
        "team": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "linkedin": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        }
      },
      "required": [
        "firstname",
        "lastname",
        "role",
        "grade",
        "entity",
        "team",
        "description",
        "linkedin",
        "twitter"
      ]
    },
    "formations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "employment_history": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "articles_and_others": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sectors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "experiences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "program": {
            "type": "string"
          },
          "client": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "context": {
            "type": "string"
          },
          "contribution": {
            "type": "string"
          }
        },
        "required": [
          "program",
          "client",
          "role",
          "date",
          "context",
          "contribution"
        ]
      }
    }
  },
  "required": [
    "general",
    "formations",
    "employment_history",
    "articles_and_others",
    "sectors",
    "skills",
    "languages",
    "experiences"
