{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:event:allow-emit",
    "shell:default",
    "dialog:default",
    "updater:default",
    "log:default",
    "log:allow-log",
    "fs:default",
    "fs:allow-stat",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    }
   
  ],
  "platforms": [
    "macOS"
  ]
}