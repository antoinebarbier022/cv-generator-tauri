{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CV Generator",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "protocol": {
        "asset": true,
        "assetScope": ["$RESOURCE/**", "$APPDATA/**"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**/*"]
      },
      "shell": {
        "sidecar": true,
        "open": true,
        "scope": [
          { "name": "binaries/main", "sidecar": true, "args": true },
          { "name": "binaries/api", "sidecar": true, "args": true }
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$RESOURCE/**", "$APPDATA/", "$APPDATA/**"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "externalBin": ["binaries/main", "binaries/api"],
      "resources": ["resources/*"],
      "active": true,
      "category": "productivity",
      "copyright": "@2024 frog. All rights reserved.",
      "deb": {
        "depends": []
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.frog.cv-generator",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/antoinebarbier022/cv-generator-tauri/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDRkYyM0EyQTYwMDkwQzUKUldURmtBQ21vaVAvTEtNbGJhMXNqTnl2MkY2bzJtYXNwVDJVRU9ib3BtK0VKcGlvcDFSRVUyaGsK"
    },
    "windows": [
      {
        "fullscreen": false,
        "minWidth": 780,
        "minHeight": 500,
        "width": 800,
        "height": 600,
        "transparent": true,
        "resizable": true,
        "title": "CV Generator",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true
  }
}
